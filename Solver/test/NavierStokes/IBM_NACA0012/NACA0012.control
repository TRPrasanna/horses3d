/* Control file for the implicit Navier-Stokes solver */
Flow equations        = "NSSA"
mesh file name        = "MESH/NACA0012.msh"

!--STL
stl file name         = "NACA0012_100"
!stl file name         = "NACA0012"

Polynomial order      = 3
Number of time steps  = 10000
Output Interval       = 10
autosave mode         = "iteration"
autosave interval     = 100

mach number           = 0.15d0
Reynolds number       = 6000000.0d0
reference temperature (k) = 300.0d0

solution file name    = "RESULTS/IBM_NACA0012.hsol"
save gradients with solution = .true.
restart               = .false.
restart file name     = "RESULTS/IBM_NACA0012_0000002200.hsol"

inviscid discretization = standard
riemann solver         = "lax-friedrichs"
viscous discretization = "BR1"
simulation type       = steady-state

!----Solver
time integration = fas
convergence tolerance = 10.d-8
!bdf order = 2
!--time step/CFL
cfl                   = 0.35d0
dcfl                  = 0.35d0

multigrid levels        = 2
mg smoother             = RKOpt
!mg preconditioner       = LTS 
mg sweeps exact         = [2,1] 
!pseudo convergence monitor = .true.
!pseudo cfl             = 0.05d0
!pseudo dcfl            = 0.05d0

wall function = standard

#define IBM
  name = NACA0012
  active = .true.
  semi implicit = .true.
  describe = .true.
  number of objects = 3
  number of interpolation points = 5
  integration order = 3
  band region coefficient = 1.5
  plot mask = .true.
  plot kdtree = .true.
  plot band points = .true.
  target y plus = 100.0d0
#end

#define boundary Inlet
  type = Inflow
#end

#define boundary outlet
  type = outflow
#end

#define boundary walls
  type = FreeSlipWall
#end

#define boundary up
  type = Inflow
#end

#define boundary down
  type = Inflow
#end

